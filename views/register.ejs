<% include public/header %>
<link href="/static/h-ui.admin/css/H-ui.login.css" rel="stylesheet" type="text/css" />

<body>
    <input type="hidden" id="TenantId" name="TenantId" value="" />
    <!-- <div class="header"></div> -->
    <div class="loginWraper">
        <div id="loginform" class="loginBox">
            <form id="formId" class="form form-horizontal" onsubmit="return sub();">
                <div class="row cl">
                    <label class="form-label col-xs-3"><i class="Hui-iconfont">&#xe60d;</i></label>
                    <div class="formControls col-xs-8">
                        <input name="phone" type="tel" placeholder="手机号" class="input-text size-L">
                    </div>
                </div>
                <div class="row cl">
                    <label class="form-label col-xs-3"><i class="Hui-iconfont">&#xe60e;</i></label>
                    <div class="formControls col-xs-8">
                        <input name="password" type="password" placeholder="密码" class="input-text size-L">
                    </div>
                </div>
                <div class="row cl">
                    <label class="form-label col-xs-3"><i class="Hui-iconfont">&#xe60e;</i></label>
                    <div class="formControls col-xs-8">
                        <input name="respassword" type="password" placeholder="重复密码" class="input-text size-L">
                    </div>
                </div>
                <div class="row cl">
                    <div class="formControls col-xs-8 col-xs-offset-3">
                        <a href="/login">已有账号？去登录</a>
                    </div>
                </div>
                <div class="row cl">
                    <div class="formControls col-xs-8 col-xs-offset-3">
                        <input name="" type="button" class="btn btn-success radius size-L" value="&nbsp;注&nbsp;&nbsp;&nbsp;&nbsp;册&nbsp;" onclick="sub()">
                        <input name="" type="reset" class="btn btn-default radius size-L" value="&nbsp;取&nbsp;&nbsp;&nbsp;&nbsp;消&nbsp;">
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="footer">Copyright F-shop(快商城) by H-ui.admin.page.v3.0 & kao2 & mongodb</div>
    <% include public/footer %>
    <script src="http://pv.sohu.com/cityjson?ie=utf-8"></script>
    <script>
    function sub() {
        // 判断参数
        if ($('input[name=phone]').val() == '') {
            $.Huimodalalert('手机号码不能为空！',2000)
            return
        }
        if ($('input[name=phone]').val().length != 11) {
            $.Huimodalalert('手机号码不正确！',2000)
            return
        }
        if ($('input[name=password]').val() == '') {
            $.Huimodalalert('密码不能为空！',2000)
            return
        }
        if ($('input[name=password]').val() != $('input[name=respassword]').val()) {
            $.Huimodalalert('两次输入密码不一致！',2000)
            return
        }
        $.ajax({
            cache: true,
            type: "POST",
            url: "/api_admin/register",
            data: $('#formId').serialize() + '&cip=' + returnCitySN['cip'] + '&cname=' + returnCitySN['cname'],
            async: false,
            error: function(request) {
                console.log(request)
            },
            success: function(data) {
                if (data.code == 0) {
                    location.href = "/login"
                } else {
                    $.Huimodalalert(data.msg, 2000)
                }
            }
        });
    }
    </script>
</body>

</html>