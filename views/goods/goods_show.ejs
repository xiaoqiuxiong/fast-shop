<!doctype html>
<html class="x-admin-sm">
<% include ../public/iframe_header %>

<body>
    <div class="x-body">
        <div class="layui-form">
            <!-- 提示：如果你不想用form，你可以换成div等任何一个普通元素 -->
            <div class="layui-form-item">
                <label class="layui-form-label">标题</label>
                <div class="layui-form-mid layui-word-aux">
                    <%= goodsInfo.title %>
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">副标题</label>
                <div class="layui-form-mid layui-word-aux">
                    <%= goodsInfo.min_title %>
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">分类</label>
                <div class="layui-form-mid layui-word-aux">
                    <%= goodsInfo.classify.name %>
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">品牌</label>
                <div class="layui-form-mid layui-word-aux">
                    <%= goodsInfo.brand.name %>
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">价格</label>
                <div class="layui-form-mid layui-word-aux">
                    <%= goodsInfo.price %> 元
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">成本价</label>
                <div class="layui-form-mid layui-word-aux">
                    <%= goodsInfo.cost %> 元
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">浏览量</label>
                <div class="layui-form-mid layui-word-aux">
                    <%= goodsInfo.pv %>
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">销量</label>
                <div class="layui-form-mid layui-word-aux">
                    <%= goodsInfo.sell %>
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">是否上架</label>
                <div class="layui-form-mid layui-word-aux">
                    <%= goodsInfo.is_sell ? '是' : '否' %>
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">首图</label>
                <div class="layui-form-mid layui-word-aux">
                    <img width="140" src="<%= goodsInfo.img[0] %> " alt="">
                </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">图片</label>
                    <div class="layui-form-mid layui-word-aux">
                        <% goodsInfo.img.forEach(function(e){ %>
                        <img width="140" src="<%= e %> " alt="">
                        <% }); %>
                    </div>
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">产品介绍</label>
                <div class="layui-form-mid layui-word-aux">
                    <%= goodsInfo.introduce %>
                </div>
            </div>
        </div>
        <% include ../public/iframe_footer %>
</body>

</html>